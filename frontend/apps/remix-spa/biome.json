{
	"$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
	"files": {
		"ignore": ["build/*", "node_modules/*"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": [
			"app/repositories/client/*",
			"app/components/shadcn-ui/*.tsx",
			"app/components/shadcn-ui/*.ts"
		]
	}
}
